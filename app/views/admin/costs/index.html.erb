<% content_for :title, "费用管理" %>
<% content_for :page_title, "AWS费用管理" %>

<!-- Page Actions -->
<% content_for :page_actions do %>
  <%= form_with url: admin_costs_path, method: :get, local: true, class: "flex items-center space-x-2" do |form| %>
    <%= form.date_field :start_date, value: @start_date, class: "px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    <span class="text-gray-500">至</span>
    <%= form.date_field :end_date, value: @end_date, class: "px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    <%= form.submit "查询", class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  <% end %>
  <%= button_to "批量同步", batch_sync_admin_costs_path, method: :post, 
                class: "px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500", 
                id: "batch-sync-btn" %>
<% end %>

<!-- Summary Cards -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
  <!-- Total Accounts -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">总账号数</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @total_accounts %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Accounts with Costs -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">有费用数据</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @accounts_with_costs %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Total Cost -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">近两周总费用</dt>
            <dd class="text-lg font-medium text-gray-900">$<%= number_with_precision(@total_cost_last_2_weeks, precision: 2) %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Sync Success Rate -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">同步成功率</dt>
            <dd class="text-lg font-medium text-gray-900"><%= number_with_precision(@sync_success_rate, precision: 1) %>%</dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Account List -->
<div class="bg-white shadow overflow-hidden sm:rounded-md">
  <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">AWS账号费用概览</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">管理和监控所有AWS账号的每日费用</p>
    </div>
    <button onclick="refreshSyncStatus()" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
      </svg>
      刷新状态
    </button>
  </div>
  
  <div class="border-t border-gray-200">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">账号名称</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">账号ID</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">期间费用</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">同步状态</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">最后同步</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">成功率</th>
            <th scope="col" class="relative px-6 py-3"><span class="sr-only">操作</span></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @aws_accounts.each do |account| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to admin_cost_path(account), class: "text-indigo-600 hover:text-indigo-900" do %>
                      <%= account.name %>
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <%= account.masked_account_id %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if account.has_cost_data? %>
                  <div class="text-sm font-medium text-gray-900">
                    $<%= number_with_precision(account.total_cost_for_period(@start_date, @end_date), precision: 2) %>
                  </div>
                <% else %>
                  <div class="text-sm text-gray-500">无数据</div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% sync_log = account.latest_cost_sync_log %>
                <% if sync_log %>
                  <% case sync_log.status %>
                  <% when 'running' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">同步中</span>
                  <% when 'completed' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">已完成</span>
                  <% when 'failed' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800" title="<%= sync_log.short_error %>">失败</span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">等待中</span>
                  <% end %>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">未同步</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if sync_log&.created_at %>
                  <%= time_ago_in_words(sync_log.created_at) %>前
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= number_with_precision(account.cost_sync_success_rate, precision: 1) %>%
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex space-x-2">
                  <%= link_to admin_cost_path(account), class: "text-indigo-600 hover:text-indigo-900" do %>
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  <% end %>
                  <%= form_with url: sync_account_admin_cost_path(account), method: :post, local: true, class: "inline-block" do |form| %>
                    <%= form.button type: "submit", 
                                    class: "text-green-600 hover:text-green-900 sync-account-btn",
                                    title: "同步费用数据",
                                    data: { account_name: account.name } do %>
                      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Recent Sync Logs -->
<div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">最近同步记录</h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">显示最近的费用数据同步操作记录</p>
  </div>
  <div class="border-t border-gray-200">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">时间</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">账号</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">类型</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">同步天数</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">耗时</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">错误信息</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @recent_sync_logs.each do |log| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= log.created_at.strftime('%m-%d %H:%M') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <% if log.aws_account %>
                  <%= log.aws_account.name %>
                <% else %>
                  <span class="text-blue-600">批量同步</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <%= log.sync_type == 'single_account' ? '单账号' : '批量' %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% case log.status %>
                <% when 'running' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">进行中</span>
                <% when 'completed' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">成功</span>
                <% when 'failed' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">失败</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">等待</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= log.synced_dates_count %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= log.formatted_duration %></td>
              <td class="px-6 py-4 text-sm text-red-600 max-w-xs truncate">
                <%= truncate(log.short_error, length: 50) if log.short_error %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- JavaScript for real-time updates -->
<script>
let syncStatusInterval;

// Refresh sync status
function refreshSyncStatus() {
  fetch('<%= sync_status_admin_costs_path %>', {
    headers: {
      'Accept': 'application/json',
      'X-Requested-With': 'XMLHttpRequest'
    }
  })
  .then(response => response.json())
  .then(data => {
    updateSyncStatus(data);
  })
  .catch(error => {
    console.error('Failed to refresh sync status:', error);
  });
}

// Update sync status in the UI
function updateSyncStatus(data) {
  const runningSyncs = data.running_syncs.length;
  if (runningSyncs > 0) {
    document.title = `(${runningSyncs}) 费用管理 - Claude Shop`;
  } else {
    document.title = '费用管理 - Claude Shop';
  }
  
  console.log('Sync status updated:', data);
}

// Start auto-refresh when page loads
document.addEventListener('DOMContentLoaded', function() {
  syncStatusInterval = setInterval(refreshSyncStatus, 30000);
});

// Clean up interval when page unloads
window.addEventListener('beforeunload', function() {
  if (syncStatusInterval) {
    clearInterval(syncStatusInterval);
  }
});

// Batch sync button handling
const batchSyncBtn = document.getElementById('batch-sync-btn');
if (batchSyncBtn) {
  const form = batchSyncBtn.closest('form');
  if (form) {
    form.addEventListener('submit', function(e) {
      // Show confirmation dialog
      if (!confirm('确定要同步所有活跃账号的费用数据吗？')) {
        e.preventDefault();
        return false;
      }
      
      // Update button state
      batchSyncBtn.disabled = true;
      batchSyncBtn.value = '启动中...';
      batchSyncBtn.innerHTML = '<svg class="animate-spin h-4 w-4 mr-2 inline" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 714 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>启动中...';
    });
  }
}

// Individual account sync button handling
document.addEventListener('DOMContentLoaded', function() {
  const syncAccountBtns = document.querySelectorAll('.sync-account-btn');
  syncAccountBtns.forEach(function(btn) {
    const form = btn.closest('form');
    if (form) {
      form.addEventListener('submit', function(e) {
        const accountName = btn.dataset.accountName;
        
        // Show confirmation dialog
        if (!confirm(`确定要同步账号 ${accountName} 的费用数据吗？`)) {
          e.preventDefault();
          return false;
        }
        
        // Update button state
        btn.disabled = true;
        btn.innerHTML = '<svg class="animate-spin h-4 w-4" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 714 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
      });
    }
  });
});
</script>