<% content_for :title, "#{@aws_account.name} - 费用详情" %>
<% content_for :page_title do %>
  <%= @aws_account.name %> 费用详情
  <% if @aws_account.status != 'active' %>
    <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">非活跃</span>
  <% end %>
<% end %>

<!-- Page Actions -->
<% content_for :page_actions do %>
  <%= form_with url: admin_cost_path(@aws_account), method: :get, local: true, class: "flex items-center space-x-2" do |form| %>
    <%= form.date_field :start_date, value: @start_date, class: "px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    <span class="text-gray-500">至</span>
    <%= form.date_field :end_date, value: @end_date, class: "px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    <%= form.submit "查询", class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  <% end %>
  <%= button_to "同步费用", sync_account_admin_cost_path(@aws_account), method: :post, 
                class: "px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500", 
                id: "sync-btn" %>
<% end %>

<!-- Breadcrumb -->
<div class="mb-4">
  <nav class="flex" aria-label="Breadcrumb">
    <ol role="list" class="flex items-center space-x-4">
      <li>
        <div class="flex items-center">
          <%= link_to admin_costs_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" do %>
            费用管理
          <% end %>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="ml-4 text-sm font-medium text-gray-500"><%= @aws_account.name %></span>
        </div>
      </li>
    </ol>
  </nav>
</div>

<!-- Account Info -->
<div class="mb-6 bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">账号信息</h3>
  </div>
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
      <div>
        <dt class="text-sm font-medium text-gray-500">账号ID</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
            <%= @aws_account.account_id %>
          </span>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">区域</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @aws_account.region || 'us-east-1' %></dd>
      </div>
    </dl>
  </div>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
  <!-- Total Cost -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">期间总费用</dt>
            <dd class="text-lg font-medium text-gray-900">$<%= number_with_precision(@total_cost, precision: 2) %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Average Daily Cost -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">日均费用</dt>
            <dd class="text-lg font-medium text-gray-900">$<%= number_with_precision(@average_daily_cost, precision: 2) %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Highest Daily Cost -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">最高日费用</dt>
            <dd class="text-lg font-medium text-gray-900">$<%= number_with_precision(@highest_daily_cost, precision: 2) %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Days with Costs -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">有数据天数</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @days_with_costs %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Cost Chart -->
<div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
  <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">每日费用趋势图</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">显示选定时间范围内的每日费用变化</p>
    </div>
    <button onclick="refreshChart()" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
      </svg>
      刷新图表
    </button>
  </div>
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <div class="chart-container" style="position: relative; height: 400px;">
      <canvas id="costChart" width="100%" height="400"></canvas>
    </div>
    <% if @daily_costs.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">暂无费用数据</h3>
        <p class="mt-1 text-sm text-gray-500">点击"同步费用"按钮获取最新数据</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Detailed Cost Data and Sync Logs -->
<div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
  <!-- Daily Cost Data -->
  <div class="lg:col-span-2">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">每日费用明细</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">详细的每日费用数据列表</p>
      </div>
      <div class="border-t border-gray-200">
        <div class="overflow-hidden" style="max-height: 400px; overflow-y: auto;">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50 sticky top-0">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日期</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">费用 (USD)</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">币种</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">更新时间</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if @daily_costs.any? %>
                <% @daily_costs.reverse_order.each do |cost| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= cost.date.strftime('%Y-%m-%d') %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                      <span class="<%= cost.cost_amount > @average_daily_cost ? 'text-red-600 font-medium' : 'text-gray-900' %>">
                        $<%= number_with_precision(cost.cost_amount, precision: 2) %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        <%= cost.currency %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= cost.updated_at.strftime('%m-%d %H:%M') %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="4" class="px-6 py-12 text-center text-sm text-gray-500">
                    <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                    </svg>
                    <p class="font-medium">暂无费用数据</p>
                    <p>请点击"同步费用"按钮获取数据</p>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Sync Logs -->
  <div class="lg:col-span-1">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">同步记录</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">最近的同步操作记录</p>
      </div>
      <div class="border-t border-gray-200">
        <div class="max-h-96 overflow-y-auto">
          <% if @cost_sync_logs.any? %>
            <% @cost_sync_logs.each_with_index do |log, index| %>
              <div class="px-4 py-4 <%= index > 0 ? 'border-t border-gray-200' : '' %>">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <% case log.status %>
                    <% when 'running' %>
                      <svg class="h-5 w-5 text-blue-400 animate-spin" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                      </svg>
                    <% when 'completed' %>
                      <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                    <% when 'failed' %>
                      <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                      </svg>
                    <% else %>
                      <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                      </svg>
                    <% end %>
                  </div>
                  <div class="ml-3 w-0 flex-1">
                    <div class="text-sm text-gray-900">
                      <% case log.status %>
                      <% when 'running' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">同步中</span>
                      <% when 'completed' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">已完成</span>
                        <span class="ml-1 text-xs text-gray-500">(<%= log.synced_dates_count %>天)</span>
                      <% when 'failed' %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">失败</span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">等待中</span>
                      <% end %>
                    </div>
                    <div class="mt-1 text-xs text-gray-500">
                      <%= log.created_at.strftime('%m-%d %H:%M') %>
                      <% if log.duration %>
                        · 耗时: <%= log.formatted_duration %>
                      <% end %>
                    </div>
                    <% if log.short_error %>
                      <div class="mt-1 text-xs text-red-600">
                        <svg class="inline h-3 w-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                        <%= truncate(log.short_error, length: 60) %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="px-4 py-12 text-center text-sm text-gray-500">
              <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p>暂无同步记录</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
// Initialize chart variable (handle Turbo navigation)
if (typeof window.costChart !== 'undefined' && window.costChart && typeof window.costChart.destroy === 'function') {
  window.costChart.destroy();
}
window.costChart = null;

// Initialize chart
document.addEventListener('DOMContentLoaded', function() {
  initializeCostChart();
});

// Also initialize on Turbo load for navigation
document.addEventListener('turbo:load', function() {
  initializeCostChart();
});

function initializeCostChart() {
  const canvas = document.getElementById('costChart');
  if (!canvas) {
    console.warn('Chart canvas not found');
    return;
  }
  const ctx = canvas.getContext('2d');
  
  // Fetch chart data with current date parameters
  const urlParams = new URLSearchParams(window.location.search);
  const chartUrl = '<%= chart_data_admin_cost_path(@aws_account) %>' + '?' + urlParams.toString();
  
  const headers = {
    'Accept': 'application/json',
    'X-Requested-With': 'XMLHttpRequest'
  };
  
  // Add CSRF token if available
  const csrfToken = document.querySelector('[name="csrf-token"]');
  if (csrfToken) {
    headers['X-CSRF-Token'] = csrfToken.getAttribute('content');
  }
  
  fetch(chartUrl, {
    headers: headers,
    credentials: 'same-origin'
  })
  .then(response => {
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    return response.json();
  })
  .then(data => {
    console.log('Chart data received:', data);
    
    if (window.costChart && typeof window.costChart.destroy === 'function') {
      window.costChart.destroy();
    }
    
    window.costChart = new Chart(ctx, {
      type: 'bar',
      data: data,
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          title: {
            display: true,
            text: '每日费用趋势 (USD)'
          },
          tooltip: {
            callbacks: {
              label: function(context) {
                return '费用: $' + context.parsed.y.toFixed(2);
              }
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              callback: function(value) {
                return '$' + value.toFixed(2);
              }
            }
          },
          x: {
            title: {
              display: true,
              text: '日期 (月-日)'
            }
          }
        },
        elements: {
          bar: {
            borderWidth: 1,
            borderSkipped: false,
            borderRadius: 2
          }
        },
        interaction: {
          intersect: false,
          mode: 'index'
        }
      }
    });
  })
  .catch(error => {
    console.error('Failed to load chart data:', error);
    document.getElementById('costChart').style.display = 'none';
  });
}

// Refresh chart data
function refreshChart() {
  initializeCostChart();
}

// Sync button handling
const syncBtn = document.getElementById('sync-btn');
if (syncBtn) {
  const form = syncBtn.closest('form');
  if (form) {
    form.addEventListener('submit', function(e) {
      // Show confirmation dialog
      if (!confirm('确定要同步账号 <%= @aws_account.name %> 的费用数据吗？')) {
        e.preventDefault();
        return false;
      }
      
      // Update button state
      syncBtn.disabled = true;
      syncBtn.value = '同步中...';
      syncBtn.innerHTML = '<svg class="animate-spin h-4 w-4 mr-2 inline" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>同步中...';
    });
  }
}

// Auto-refresh chart every 60 seconds if there are running syncs
setInterval(function() {
  const runningElements = document.querySelectorAll('.animate-spin');
  if (runningElements.length > 0) {
    refreshChart();
  }
}, 60000);
</script>