<div class="<%= card_classes %>" data-account-id="<%= account.id %>">
  <!-- 卡片头部 -->
  <div class="p-4 border-b border-gray-100">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="flex items-center space-x-2">
          <h3 class="text-lg font-semibold text-gray-900">
            <%= account.name %>
          </h3>
          <span class="<%= status_badge_classes %>">
            <%= status_text %>
          </span>
          <% if admin_view %>
            <%= connection_status_icon %>
          <% end %>
        </div>
        
        <p class="text-sm text-gray-600 mt-1">
          账号ID: <code class="bg-gray-100 px-1 rounded"><%= account.account_id %></code>
        </p>
        
        <% if account.description.present? %>
          <p class="text-sm text-gray-500 mt-1 line-clamp-2">
            <%= account.description %>
          </p>
        <% end %>
      </div>
      
      <div class="text-right ml-4">
        <div class="text-lg font-bold text-gray-900">
          <%= account.total_quota_remaining > 0 ? number_with_delimiter(account.total_quota_remaining) : '0' %>
        </div>
        <div class="text-xs text-gray-500">总剩余配额</div>
      </div>
    </div>
  </div>
  
  <!-- 配额信息 -->
  <div class="p-4">
    <% if primary_quotas.any? %>
      <div class="space-y-3">
        <% primary_quotas.each do |quota| %>
          <%= render QuotaStatusComponent.new(quota: quota, compact: true) %>
        <% end %>
        
        <% if remaining_quota_count > 0 %>
          <div class="text-center">
            <button type="button" 
                    class="text-sm text-blue-600 hover:text-blue-800 font-medium"
                    data-action="click->modal#open"
                    data-modal-url="<%= account_quota_details_path(account) %>">
              还有 <%= remaining_quota_count %> 个模型配额...
            </button>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-4">
        <div class="text-gray-400">
          <svg class="mx-auto h-8 w-8 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2 2v-5m16 0h-2M4 13h2"></path>
          </svg>
          <p class="text-sm">暂无可用配额</p>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- 操作按钮 -->
  <div class="p-4 bg-gray-50 border-t border-gray-100">
    <div class="flex items-center justify-between">
      <div class="text-xs text-gray-500">
        <%= last_update_text %>
      </div>
      
      <div class="flex space-x-2">
        <% unless admin_view %>
          <!-- 查看详情按钮 -->
          <%= link_to account_path(account), 
                      class: "inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
                      data: { turbo_frame: "account_modal" } do %>
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            查看详情
          <% end %>
          
          <!-- Telegram联系按钮 -->
          <% if account.has_available_quota? %>
            <%= link_to telegram_url, 
                        target: "_blank",
                        rel: "noopener noreferrer",
                        class: "inline-flex items-center px-3 py-1.5 border border-transparent shadow-sm text-xs font-medium rounded text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 24 24">
                <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
              </svg>
              联系购买
            <% end %>
          <% end %>
        <% else %>
          <!-- 管理员操作按钮 -->
          <div class="flex space-x-1">
            <%= link_to admin_aws_account_path(account), 
                        class: "inline-flex items-center px-2 py-1 text-xs font-medium text-blue-600 hover:text-blue-800" do %>
              编辑
            <% end %>
            
            <button type="button" 
                    class="inline-flex items-center px-2 py-1 text-xs font-medium text-green-600 hover:text-green-800"
                    data-action="click->quota#refresh"
                    data-account-id="<%= account.id %>">
              刷新配额
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>